<div class="container">

  <div class="room-selection-form">
    <h1> Select a room </h1>
    <div class="form-fields">
      <%= simple_form_for(@room) do |f| %>
        <%= f.input :name, label: false, placeholder: "Enter a room id" %>
        <br>
        <div class="centered-simple-form-button">
          <%= f.submit "Create room" %>
        </div>
      <% end %>
    </div>
  </div>

  <ul class="rooms-cards-list">
    <% @rooms.each do |room| %>
      <li>
        <%= link_to room_path(room) do %>
          <% if room.photo.attached? %>
            <div class="room-card",
              style="background-image: url('<%= cl_image_path room.photo.key, height: 300, crop: :fill %>');">
                <%= room.name %>
                <%= link_to "Delete", room_path(room),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          <% else %>
            <div  class="room-card",
              style="
                background-image: linear-gradient(
                    rgba(0, 0, 0, 0.5),
                    rgba(0, 0, 0, 0.3)
                  ),
                  url(https://i-cf65.ch-static.com/content/dam/cf-consumer-healthcare/paradontax/en_SA/Sierra-update/banner-3.jpg?auto=format);
              ">
                <%= room.name %>
                <%= link_to "Delete", room_path(room),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
