<div class="races-container">
  <div class="progress-bar">
    <h3>30%</h3>
    <progress max="100" value="30"></progress>
  </div>
  <h1>Races</h1>
  <p>Select your character race</p>

  <ul class="races-list">
    <% @races.each do |race| %>
      <% if race.image_url.present? %>
        <div class="race-infos">
          <li><%= image_tag("#{race.image_url}", class: "race-icon") %></li>
          <%= link_to "#{race.name}", character_race_path(@character, race), html: { class: 'race-selection-button' } %>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="buttons-footer">
  <div class="new-character-home-button">
    <%= link_to room_path(@character.room) do %>
    <i class="fa-brands fa-fort-awesome-alt"></i>
    <% end %>
  </div>
</div>
