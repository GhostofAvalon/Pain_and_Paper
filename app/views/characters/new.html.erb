<div>
  <h1>My character</h1>
  <%= simple_form_for [@room, @character] do |f| %>
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :height %>
    <%= f.input :level %>
    <%= f.input :weight %>
    <%= f.input :gender %>

    <%# <%= f.input :photo, as: :file %>
    <%= f.submit "Create Character" %>
  <% end %>
</div>

<div>
  <ol>
    <%= link_to "Back to the room", room_path(@room) %>
  </ol>
</div>
