<h1>Spells</h1>
<p>Select your character spell</p>
<% n=1 %>
<p><%= n>1 ? "Spells" : "Spell"%> remaining  <%= n %></p>

<ul>
  <% @spells.each do |spell| %>
    <li><strong><%= spell.name %></strong></li>
    <li><%= spell.description %></li>
    <a href="#">Select this spell</a>
    <br>
  <% end %>
</ul>
