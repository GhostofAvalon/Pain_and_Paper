<div class="skills-container">

  <div class="progress-bar">
    <h3>80%</h3>
    <progress max="100" value="80"></progress>
  </div>

  <h1>Skills</h1>

  <div data-controller="counter">
    <p>Select <span data-counter-target="counter"><%= 5 - @character.skills.count %></span> more skills</p>
    <%= render 'shared/skills_form' %>
    <%= link_to "Finish", character_spells_path(@character), class: "new-character-form-button" %>
  </div>

</div>
